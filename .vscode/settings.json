{
  "files.exclude": {
    "**/.git": true,
    "public": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "build/**": true,
    "sites/**": true
  },
  "workbench.editorAssociations": {
    "*.md": "default",
    "*.puml": "default",
    "*.html": "default"
  },
  "[gohtml]": {
    "editor.defaultFormatter": "golang.go"
  },
  "scm.autoReveal": true,
  "explorer.autoReveal": "focusNoScroll"
}
